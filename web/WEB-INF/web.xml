<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID" version="4.0">
    
    <display-name>My Email Sender App</display-name>
    
    <!-- Servlet Mapping -->
    <servlet>
        <servlet-name>MailDispatcherServlet</servlet-name>
        <servlet-class>com.example.servlet.MailDispatcherServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MailDispatcherServlet</servlet-name>
        <url-pattern>/MailDispatcherServlet</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>emailClient.jsp</welcome-file>
    </welcome-file-list>
    
</web-app>
